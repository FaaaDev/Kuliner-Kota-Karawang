<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".ui.profile.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:id="@+id/after"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardMaxElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fdc913"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_baseline_camera_white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="60dp"
                        android:layout_margin="20dp">
                        <ImageView
                            android:id="@+id/imgprofile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/stock_photo"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/lapakname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lapak Name"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#1b1b1b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="24dp"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Hidup"
                android:textSize="16sp"
                android:fontFamily="@font/barlow_medium"
                android:textColor="#727272"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:layout_marginTop="24dp"
                android:contentDescription="none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/before"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginEnd="34dp"
                        android:fontFamily="@font/barlow_semibold"
                        android:text="Masuk Untuk Kelola Lapak"
                        android:textColor="#1b1b1b"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@drawable/ic_undraw_my_password"
                        android:layout_margin="40dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="34dp"
                        android:layout_marginTop="24dp">
                        <Button
                            android:id="@+id/regist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Daftar"
                            android:background="@drawable/btn_secondary"
                            android:textColor="#fdc913"
                            android:textAllCaps="false"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/barlow_semibold"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Masuk"
                            android:background="@drawable/btn_primary"
                            android:textColor="#ffffff"
                            android:textAllCaps="false"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/barlow_semibold"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>