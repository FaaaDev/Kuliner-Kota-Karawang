<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Login"
    android:id="@+id/container">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="400dp"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="-180dp"
            android:layout_marginTop="-70dp"
            app:cardElevation="0dp"
            android:rotation="45">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradiasi"
                android:gravity="center"
                android:orientation="vertical" />

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="34dp"
                    android:fontFamily="@font/barlow_semibold"
                    android:text="Masuk ke Lapak"
                    android:textColor="#1b1b1b"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="34dp">

                    <EditText
                        android:id="@+id/nohp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layouting"
                        android:layout_marginTop="12dp"
                        android:hint="082488xxxxxx"
                        android:inputType="number"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_label"
                        android:fontFamily="@font/barlow_medium"
                        android:text="Nomor HP"
                        android:textColor="#1b1b1b"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="34dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layouting"
                        android:layout_marginTop="12dp"
                        android:hint="*******"
                        android:inputType="textPassword"
                        android:fontFamily="@font/barlow_regular"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_label"
                        android:fontFamily="@font/barlow_medium"
                        android:text="Password"
                        android:textColor="#1b1b1b"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/login_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="34dp"
                    android:layout_marginTop="24dp"
                    android:textAllCaps="false"
                    android:text="Masuk"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="@font/barlow_semibold"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/goregist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/barlow_regular"
        android:text="@string/register"
        android:textColor="#0000ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>